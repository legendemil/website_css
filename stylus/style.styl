body
	font-family 'Lato', sans-serif
	

.container
	max-width 1024px
	margin-top 0px
	margin 0 auto !important
	
.flex-container		
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	
.flex-container-data
	& div
		width 45%
	& div + div
		margin-left 40px
	& div img 
		margin 0 auto
		display block
		width 150px	
		

header#site-header
	text-align center
	> h1
		font-size 50px
		padding-top 60px
	p 
		padding-top 20px
		font-size 1.2em
		

.info-tool-container
	float left
	& + div
		margin-left 20px
	h1
		text-align center
		margin-bottom 30px
	p 
		text-align center
	img
		max-width 200px
		

footer
	text-align center
	padding 10px


	


		
	
	